{
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "functions": {
    "server/index.mjs": {
      "maxDuration": 10
    }
  },
  "headers": [
    {
      "source": "/_nuxt/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/images/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "env": {
    "NUXT_TELEMETRY_DISABLED": "1",
    "NODE_OPTIONS": "--max_old_space_size=8192",
    "SMTP_PASSWORD": "@smtp_password"
  }
}